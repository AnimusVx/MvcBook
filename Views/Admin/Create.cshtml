@model IEnumerable<Books>
@{
    ViewData["Title"] = "Create";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-success"> Book List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="" asp-action="" class="btn btn-success">Create new Book</a>
          @* upsert sayfasına gider *@
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered border-success" style="width:100%">

            <tbody>


                @foreach (var item in Model)
                {
                    <tr>

                        <td width="20%">@item.B_Name</td>
                        <td width="20%">@item.B_Author</td>
                        <td width="20%">@item.B_Page</td>
                        <td class="text-center">
                            <a asp-controller="" asp-action="" asp-route-id="@item.B_Id" class="btn btn-success">update</a>
                            @*  Update işlemi*@
                        </td>
                        <td class="text-center">
                            <a asp-controller="" asp-action="" asp-route-id="@item.B_Id" class="btn btn-danger mx-2">delete</a>
                            @*  Delete işlemi*@
                        </td>


                    </tr>
                }



            </tbody>


        </table>




    }
    else
    {
        <p>No items created yet</p>
    }
</div>